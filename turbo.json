{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "docker:db": {
      "dependsOn": [
        "^docker:db"
      ]
    },
    "check": {
      "dependsOn": [
        "^check"
      ]
    },
    "db:deploy": {
      "dependsOn": [
        "^db:deploy"
      ]
    },
    "db:generate": {
      "dependsOn": [
        "^db:generate"
      ]
    },
    "tsc": {
      "dependsOn": [
        "^tsc"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
